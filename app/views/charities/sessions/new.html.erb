<div class="row pt-5 pb-5">
  <div class="col-sm-8 offset-sm-2 text-center">
    <h3>Charity Sign In</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group pt-2 pb-3">
        <%= f.email_field :email, placeholder: "Email Address", autocomplete: "email", class: "form-control form-control-lg" %>
      </div>

      <div class="form-group pt-3 pb-2">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control form-control-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions pt-5 text-center">
        <%= f.submit "Log in", class: "btn btn-dark btn-lg" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row pt-5 pb-5">
    <div class="col-sm-6 offset-sm-3 text-center">
      <h4>Not a member?</h4>
      <%= link_to "Sign Up", new_charity_registration_path, class: "btn btn-dark btn-lg mt-3" %>
    </div>
  </div> 