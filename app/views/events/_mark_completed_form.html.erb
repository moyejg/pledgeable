<div class="row pt-5 pb-5">
  <div class="col-sm-8 offset-sm-2">

    <%= form_with(model: @event, local: true) do |form| %>
      <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>    

        <div class="form-group pt-2 pb-2">
          <%= form.number_field :amount, :step => 0.01, placeholder: "Amount", class: "form-control form-control-lg" %>
        </div>

        <div class="form-group pt-2 pb-2">          
          <%= form.datetime_local_field :event_completed_on, class: "form-control form-control-lg" %>
        </div>    

      <div class="actions pt-5 text-center">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
