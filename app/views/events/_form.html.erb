<div class="row pt-5 pb-5">
  <div class="col-sm-8 offset-sm-2">

    <%= form_with(model: event, local: true) do |form| %>
      <% if event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>    

      <div class="form-group pt-2 pb-2">
        <%= form.text_field :name, placeholder: "Name", class: "form-control form-control-lg" %>
      </div>

      <div class="form-group pt-2 pb-2">          
        <%= form.text_area :description, placeholder: "Describe your event", class: "form-control form-control-lg", rows: "5" %>
      </div> 

      <%= form.collection_select(:event_category_id, EventCategory.all, :id, :name, { :prompt => 'Select your event type' }, class: "form-select form-select-lg mb-3") %>  

      <%= form.collection_select(:charity_id, Charity.all, :id, :name, { :prompt => 'Select your charity' }, class: "form-select form-select-lg mb-3") %>

      <div class="actions pt-5 text-center">
        <%= form.submit %>
      </div>
    <% end %>

  </div>
</div>

