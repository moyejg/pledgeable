<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>    

  <% if action_name == "new" %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="field">
      <%= form.label :category %>
      <%= form.select :category, Event::CATEGORY_OPTIONS %>
    </div>
  <% end %>

  <% if action_name == "edit" %>
    <div class="field">
      <%= form.label :amount %>
      <%= form.text_field :amount %>
    </div>

    <div class="field">
      <%= form.label :event_completed_on %>
      <%= form.datetime_select :event_completed_on %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

