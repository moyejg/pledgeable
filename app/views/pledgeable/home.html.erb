<% if !user_signed_in? && !charity_signed_in? %>
  <div class="row pt-5 pb-5">
    <div class="col-sm pt-5 pb-5">
      <%= link_to "USERS", new_user_session_path, class: "btn btn-dark btn-lg btn-block pt-5 pb-5 pl-5 pr-5" %>
    </div>
  </div>

  <div class="row pt-5 pb-5">
    <div class="col-sm pt-5 pb-5">
      <%= link_to "CHARITIES", new_charity_session_path, class: "btn btn-dark btn-lg btn-block pt-5 pb-5 pl-5 pr-5" %>
    </div>
  </div>
<% elsif charity_signed_in? %> 
  <%= link_to 'Connect with Stripe', account_create_path, method: :post, class: "btn btn-dark btn-lg btn-block mt-5" %>
  <%= link_to "Sign out", destroy_charity_session_path, method: :delete %>
<% else user_signed_in? %> 
  <% if current_user.stripe_customer_id.blank? %>
    <div class="row pt-5">
      <div class="col-sm-6 offset-sm-3">
        <div class="card">
          <h4>* Please add your card info in order to pledge to events.</h4>
        </div>
        <%= link_to 'Add card info', checkout_create_path, method: :post, params: {id: current_user.id}, remote: true, class: "btn btn-dark btn-lg btn-block mt-5" %>
      </div>
    </div>
  <% end %>

  <div class="row pt-5">
    <div class="col-sm-6 offset-sm-3">
      <%= link_to "New Event", new_event_path, class: "btn btn-dark btn-lg btn-block" %>
    </div>
  </div>

  <div class="row pt-5 pb-5">
    <div class="col-sm-6 offset-sm-3 text-center">
      <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "btn btn-dark btn-lg btn-block" %>
    </div>
  </div>

  <% @events.each do |event| %>
  <% if event.event_completed_on.blank? %>
    <div class="row pt-5">
      <div class="col-sm">
        <div class="card border border-dark">
            <div class="card-header bg-secondary">
              <h3><%= event.name %></h3>
              <% if user_signed_in? && current_user.id == event.user.id %>
                <h4>Event created by: You</h4>
              <% else %>
                <h4>Event created by: <%= event.user.username %></h4>
              <% end %>
              <h4>Type: <%= event.category %></h4>
              <%= link_to 'View Event', event, class: "btn btn-dark btn-sm mt-3 mb-3" %>
            </div>
          <div class="card-body bg-light">
            <h4><%= event.description %></h4> 
          </div>
          <div class="text-center">
            <% if user_signed_in? && current_user.stripe_customer_id.present? %>
              <%= link_to  "Pledge", new_pledge_path(id: event.id), class: "btn btn-success btn-sm mt-3 mb-3" %>
            <% end %>  
          </div>                  
        </div>
      </div>
    </div>  
  <% end %>
<% end %>


<% end %>
  







