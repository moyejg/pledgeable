<div class="row pt-5 pb-5">
  <div class="col-sm-8 offset-sm-2">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group pt-2 pb-2">
        <%= f.text_field :username, placeholder: "Username", autofocus: true, class: "form-control form-control-lg" %>
      </div>

      <div class="form-group pt-2 pb-3">
        <%= f.email_field :email, placeholder: "Email Address", autocomplete: "email", class: "form-control form-control-lg" %>
      </div>

      <div class="form-file form-file-lg">
        <%= f.file_field :avatar, class: "form-file-input", id: "customFile" %>
          <label class="form-file-label" for="customFile">
            <span class="form-file-text">Upload an Avatar</span>
            <span class="form-file-button">Browse</span>
          </label>
      </div>

      <div class="form-group pt-3 pb-2">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control form-control-lg" %>
      </div>

      <div class="form-group pt-2 pb-2">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control form-control-lg" %>
      </div>

      <div class="actions pt-5 text-center">
        <%= f.submit "Sign up", class: "btn btn-dark btn-large" %>
      </div>
    <% end %>
  </div>
</div>
